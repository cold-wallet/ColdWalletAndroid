<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.NewAssetActivity">

    <Switch
        android:id="@+id/switchFiatCrypto"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:showText="true"
        android:text="@string/hint_type"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textOff="@string/fiat"
        android:textOn="@string/crypto" />

    <Spinner
        android:id="@+id/spinnerCurrencies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/edit_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_type"
        android:inputType="number"
        android:minHeight="@dimen/min_height"
        android:textSize="18sp"
        android:visibility="gone" />

    <AutoCompleteTextView
        android:id="@+id/edit_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:hint="@string/hint_currency"
        android:inputType="textAutoComplete"
        android:minHeight="@dimen/min_height"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_amount"
        android:inputType="numberDecimal"
        android:minHeight="@dimen/min_height"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_height"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_name"
        android:inputType="textAutoComplete"
        android:layout_margin="@dimen/big_padding"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:fontFamily="sans-serif-light"
        android:hint="@string/hint_descrption"
        android:inputType="textAutoComplete"
        android:minHeight="@dimen/min_height"
        android:textSize="18sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/button_save"
        android:layout_margin="@dimen/big_padding"
        android:textColor="@color/cardview_light_background" />
</LinearLayout>